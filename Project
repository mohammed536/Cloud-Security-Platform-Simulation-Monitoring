function setLang(l){
  const T = text[l];

  document.documentElement.lang = T.lang;
  document.documentElement.dir  = T.dir;

  document.getElementById("subtitle").innerText = T.subtitle;

  document.getElementById("bfTitle").innerText = T.bfTitle;
  document.getElementById("bfDesc").innerText = T.bfDesc;
  document.getElementById("bfBtn").innerText = T.bfBtn;

  document.getElementById("ranTitle").innerText = T.ranTitle;
  document.getElementById("ranDesc").innerText = T.ranDesc;
  document.getElementById("ranBtn").innerText = T.ranBtn;

  document.getElementById("logTitle").innerText = T.logTitle;
  document.getElementById("logDesc").innerText = T.logDesc;
  document.getElementById("logBtn").innerText = T.logBtn;

  document.getElementById("cmdTitle").innerText = T.cmdTitle;
  document.getElementById("archTitle").innerText = T.archTitle;

  document.getElementById("bfStatus").innerText = T.ready;
  document.getElementById("ranStatus").innerText = T.ready;
}

